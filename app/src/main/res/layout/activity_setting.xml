<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Setting_Activity">

    <Button
        android:id="@+id/button_common_set"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/new_button"
        android:text="Загальні"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/grey"
        android:foregroundGravity="center"
        app:itemIconSize="40dp"
        app:itemIconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/down_menu"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/button_kalib"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/button_net"
        app:layout_constraintStart_toStartOf="@+id/button_net"
        app:layout_constraintTop_toBottomOf="@+id/button_info" />

    <Button
        android:id="@+id/button_net"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/new_button"
        android:text="Мережа"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/button_common_set"
        app:layout_constraintStart_toStartOf="@+id/button_common_set"
        app:layout_constraintTop_toBottomOf="@+id/button_common_set" />

    <Button
        android:id="@+id/button_info"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/new_button"
        android:text="Інформація"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/button_trailer"
        app:layout_constraintStart_toStartOf="@+id/button_trailer"
        app:layout_constraintTop_toBottomOf="@+id/button_trailer" />

    <Button
        android:id="@+id/button_trailer"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/new_button"
        android:text="Причіпи"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/button_net"
        app:layout_constraintStart_toStartOf="@+id/button_net"
        app:layout_constraintTop_toBottomOf="@+id/button_net" />

</androidx.constraintlayout.widget.ConstraintLayout>