<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".common_kalib">

    <Button
        android:id="@+id/button_set_ax1"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/new_button"
        android:gravity="center"
        android:text="Вісь 1"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/button_set_ax3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_set_ax2"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/new_button"
        android:gravity="center"
        android:text="Вісь 2"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/button_set_trailer"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_set_trailer"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/new_button"
        android:gravity="center"
        android:text="Причіп"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/button_set_static"
        app:layout_constraintTop_toBottomOf="@+id/button_set_ax2" />

    <Button
        android:id="@+id/button_set_ax3"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/new_button"
        android:gravity="center"
        android:text="Вісь 3"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/button_set_static"
        app:layout_constraintTop_toBottomOf="@+id/button_set_ax1" />

    <Button
        android:id="@+id/button_set_static"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/new_button"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:text="Вісь 0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_set_trailer" />

</androidx.constraintlayout.widget.ConstraintLayout>